{
  "name": "iframe-shared-storage",
  "version": "1.0.29",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexshchur/iframe-shared-storage.git"
  },
  "homepage": "https://github.com/alexshchur/iframe-shared-storage#readme",
  "bugs": {
    "url": "https://github.com/alexshchur/iframe-shared-storage/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts --max-warnings=0",
    "build": "npm run build:module && npm run build:browser",
    "build:module": "tsc --project tsconfig.json",
    "build:browser": "esbuild src/index.ts --bundle --format=iife --global-name=IframeStorage --outfile=dist/browser.js",
    "build:browser:watch": "npm run build:browser -- --watch",
    "build:module:watch": "npm run build:module -- --watch",
    "build:watch": "npm run build:module:watch & npm run build:browser:watch #NB: this command only runs on a POSIX shell",
    "ts:check": "tsc --noEmit",
    "test": "jest",
    "test:e2e": "playwright test",
    "serve:client": "serve -l 5100 -n -c configs/serve.client.json .",
    "serve:hub": "serve -l 5101 -n -c configs/serve.hub.json .",
    "prepublishOnly": "npm run build",
    "test:all": "npm run ts:check && npm run test && npm run build:browser && npm run test:e2e",
    "verify": "npm run ts:check && npm run build && npm run test && npm run test:e2e"
  },
  "author": "hi@alexeyshchur.com",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "idb-keyval": "^6.2.2",
    "postmsg-rpc": "^2.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.39.1",
    "express": "^5.1.0",
    "fake-indexeddb": "^6.2.5",
    "globals": "^15.15.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "serve": "^14.2.5",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "files": [
    "dist"
  ]
}
